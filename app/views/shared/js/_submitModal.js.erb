<% if item.errors.any? %>
$("#form_errors").html("<%= escape_javascript(render partial: ("shared/error_messages"), locals:{name: item})%>");
$("#form_errors").show(300);
<% else %>
$("#form_errors").hide(300);
$("#list").html("<%= escape_javascript( render items )  %>");
$("#flash_notice").html("<%= escape_javascript( render(partial: "shared/flashNotice"))  %>");
$("#modal").modal('hide');
<% end %>